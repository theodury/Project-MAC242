= form_for @fuel do |f|
  - if @fuel.errors.any?
    #error_explanation
      %h2= "#{pluralize(@fuel.errors.count, "error")} prohibited this fuel from being saved:"
      %ul
        - @fuel.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
